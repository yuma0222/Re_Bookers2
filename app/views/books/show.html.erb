<div class="container">
  <div class="row">
    <%= render 'users/sidebar', user:current_user, book:@book %>
    <div class="col-xs-9">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
              <% end %></td>
            <td><%= @books.title %></td>
            <td><%= @books.body %></td>
            <% if @user.id == current_user.id %>
              <td><%= link_to "Edit", edit_book_path(@books.id), class: "btn btn-success" %></td>
              <td><%= link_to "Destroy", book_path(@books.id), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？"  %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
      <%= link_to @user.name, user_path(@user.id) %>
    </div>
  </div>
</div>