<div class="container">
  <div class="row">
    <%= render 'users/sidebar', user:current_user, book:@book %>
    <div class="col-xs-9">

      <h2>Book detail</h2>
      <table class="table">
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
               <% end %>
             </td>
            <td><%= link_to @books.title, book_path(@books) %></td>
            <td><%= @books.body %></td>

               <!--いいね　ここから-->
             <td>
              <% if @onebook.favorited_by?(current_user) %>
                  <%= link_to book_favorites_path(@onebook), method: :delete do %>
                  <span class="glyphicon glyphicon-heart"><%= @onebook.favorites.count %></span>
                 <% end %>
              <% else %>
                  <%= link_to book_favorites_path(@onebook), method: :post do %>
                   <span class="glyphicon glyphicon-heart-empty"><%= @onebook.favorites.count %></span>
                  <% end %>
              <% end %>
            </td>
            <!--いいね　ここまで-->
            <td>コメント数: <%= @onebook.book_comments.count %></td>

            <% if @user.id == current_user.id %>
              <td><%= link_to "Edit", edit_book_path(@books.id), class: "btn btn-success" %></td>
              <td><%= link_to "Destroy", book_path(@books.id), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？"  %></td>
            <% end %>
          </tr>
      </table>

      <!--コメント　ここから-->
       <table>
            <% @onebook.book_comments.each do |comment| %>
          <tr>
           <td class="show-comment">
            <%= link_to user_path(comment.user), class: "user_#{comment.user.id}" do %>
              <%= attachment_image_tag comment.user, :profile_image, fallback: "no_image.jpg", size: "50x50" %><br>
              <%= comment.user.name %>
            <% end %>
          </td>

            <td class="show-comment"><%= comment.comment %></td><!--userの情報を調べる-->
            <% if comment.user_id == current_user.id %>
               <td><%= link_to 'Destroy', book_book_comment_path(@onebook, comment), class: 'btn-sm btn-danger', method: :delete %></td>
               <% end %>
            <% end %>
           </tr>
      </table>

      <div class="comment-form">
        <%= form_for [@onebook, @book_comment] do |f| %>
        <%= f.text_area :comment, size: "90x5" %>
        <%= f.submit '送信', class: "btn-sm btn-primary" %>
        <% end %>
      </div>

          <% if @onebook.errors.any? %>
          <h3><%= @onebook.errors.count %>error occurrence</h3>
          <ul>
              <% @onebook.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
              <% end %>
          </ul>
          <% end %>
    </div>
  </div>
</div>