<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">

      <h1>Editing Book</h1>

      <%= form_for(@book) do |f| %>
        <% if @book.errors.any? %>
          <h5><%= @book.errors.count %> errors prohibited this book from being saves:</h5>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        <div class="field row">
         <h5>Title</h5>
            <%= f.text_field :title, class:"col-xs-12" %>
        </div>
        <div class="field row">
          <h5>Opinion</h5>
            <%= f.text_area :body, class:"col-xs-12" %>
        </div>
        <div class="actions row">
          <%= f.submit "Update Book", class:"btn btn-primary btn-block" %>
        </div>
      <% end %>
      <p><%= link_to "Show" ,book_path %>
      |
      <%= link_to "Back" ,books_path %></p>
    </div>
  </div>
</div>